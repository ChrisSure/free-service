{% extends 'layouts/base.html.twig' %}

{% block title %}Admin detail{% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admins') }}">Admins</a></li>
        <li class="breadcrumb-item active">Detail</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <h4>Account</h4>
                <table class="table table-sm">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ admin.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ admin.email }}</td>
                    </tr>
                    <tr>
                        <th>Role</th>
                        <td>
                            {% if (admin.roles[0] == 'ROLE_SUPER_ADMIN') %}
                                <span class="badge badge-secondary">Super admin</span>
                            {% elseif(admin.roles[0] == 'ROLE_ADMIN') %}
                                <span class="badge badge-secondary">Admin</span>
                            {% else %}
                                <span class="badge badge-secondary">Moderator</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            {% if (admin.status == 'active') %}
                                <span class="badge badge-success">Active</span>
                            {% elseif(admin.status == 'blocked') %}
                                <span class="badge badge-danger">Blocked</span>
                            {% else %}
                                <span class="badge badge-primary">New</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Created</th>
                        <td>{{ admin.created_at|date('Y-m-d') }}</td>
                    </tr>
                    <tr>
                        <th>Updated</th>
                        <td>{{ admin.created_at|date('Y-m-d') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-6">
                {%  if(admin.profile != null) %}
                    <h4>Profile</h4>
                    <table class="table table-sm">
                        <tbody>
                        <tr>
                            <th>Firstname</th>
                            <td>{{ admin.profile.firstname }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ admin.profile.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Surname</th>
                            <td>{{ admin.profile.surname }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ admin.profile.phone }}</td>
                        </tr>
                        <tr>
                            <th>About</th>
                            <td>{{ admin.profile.about }}</td>
                        </tr>
                        <tr>
                            <th>Sex</th>
                            <td>
                                {% if (admin.profile.sex == 1) %}
                                    Male
                                {% else %}
                                    Female
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <th>Birthday</th>
                            <td>{{ admin.profile.birthday }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ admin.profile.city.name }}</td>
                        </tr>
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                {%  if(admin.social|length > 0) %}
                    <h4 class="mt-4">Social networks</h4>
                    {%  for social in admin.social %}
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Provider</th>
                                <td>{{ social.provider }}</td>
                            </tr>
                            </tbody>
                        </table>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}